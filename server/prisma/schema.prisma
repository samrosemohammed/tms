generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
    moduleFormat    = "cjs"
}

datasource db {
  provider = "postgresql"
}

model Task {
  id          String   @id @default(uuid())
  title       String
  description String?
  status      String   @default("Todo")
  priority    String   @default("Medium")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
